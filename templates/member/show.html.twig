{% extends 'base.html.twig' %}

{% block title %}Member{% endblock %}

{% block content %}
    <h1>Member</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ member.id }}</td>
            </tr>
            <tr>
                <th>Username</th>
                <td>{{ member.username }}</td>
            </tr>
            <tr>
                <th>EmailAddress</th>
                <td>{{ member.emailAddress }}</td>
            </tr>
            <tr>
                <th>LastLogin</th>
                <td>{{ member.lastLogin ? member.lastLogin|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('member_index') }}" class="btn btn-primary">back to list</a>

    <a href="{{ path('member_edit', {'id': member.id}) }}" class="btn btn-warning">edit</a>

    {{ include('member/_delete_form.html.twig') }}
{% endblock %}
