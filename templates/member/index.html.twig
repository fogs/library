{% extends 'base-avanzu.html.twig' %}

 
{% block page_title %}Members List {% endblock %}
 {% block page_subtitle %} {% endblock %}
{% block page_content %}
   
 <div class="row">  
<div class="col-md-12">


    <div class="box box-primary">
            <div class="box-header with-border">
              <h3 class="box-title">Member List</h3>
              <a href="{{ path('member_new') }}" class="btn btn-success   pull-right">Create new</a>
            </div>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Username</th>
                <th>EmailAddress</th>
                <th>LastLogin</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for member in members %}
            <tr>
                <td>{{ member.id }}</td>
                <td>{{ member.username }}</td>
                <td>{{ member.emailAddress }}</td>
                <td>{{ member.lastLogin ? member.lastLogin|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('member_show', {'id': member.id}) }}"><i class="fa fa-eye"></i></a>
                    <a href="{{ path('member_edit', {'id': member.id}) }}"><i class="fa fa-edit"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    </div>
    </div>
    </div>
    
{% endblock %}
