<form method="post" class="pull-right" action="{{ path('lending_delete', {'id': lending.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ lending.id) }}">
    <button class="btn btn-danger"><i class="fa fa-trash"></i></button>
</form>
