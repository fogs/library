{% extends 'base.html.twig' %}

{% block title %}Lending{% endblock %}

{% block content %}
    <h1>Lending</h1>

    <table class="table table-hover">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ lending.id }}</td>
            </tr>
            <tr>
                <th>CollectedAt</th>
                <td>{{ lending.collectedAt ? lending.collectedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
