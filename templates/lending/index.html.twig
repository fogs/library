{% extends 'base.html.twig' %}

{% block title %}Lending index{% endblock %}

{% block content %}
    <h1>Lending index</h1>

    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-body table-responsive no-padding">
                    <table class="table table-hover">
                        <thead>
                        <tr>
                            <th>Id</th>
                            <th>Member</th>
                            <th>CollectedAt</th>
                            <th>ReturnedAt</th>
                            <th>actions</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for lending in lendings %}
                            <tr>
                                <td>{{ lending.id }}</td>
                                <td>{{ lending.member }}</td>
                                <td>{{ lending.collectedAt ? lending.collectedAt|date('Y-m-d H:i:s') : '' }}</td>
                                <td>{{ lending.returnedAt ? lending.returnedAt|date('Y-m-d H:i:s') : '' }}</td>
                                <td>
                                    <a href="{{ path('lending_show', {'id': lending.id}) }}"><span
                                                class="label label-primary">show</span></a>
                                    <a href="{{ path('lending_edit', {'id': lending.id}) }}"><span
                                                class="label label-warning">edit</span></a>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="4">no records found</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <a href="{{ path('lending_new') }}" class="btn btn-success">Create new</a>
{% endblock %}
