{# {% extends '@AdminLTE/layout/default-layout.html.twig' %} #}
{% extends 'default-layout.html.twig' %}



{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('bundles/adminlte/adminlte.css') }}">  
{% endblock %}

{% block logo_mini %}<b>Lib</b>{% endblock %}
{% block logo_large %}<b>Library</b>{% endblock %}

{% block navbar_start %}
    {% include "navigation.html.twig" %}
{% endblock %}

{% block page_title %}{% endblock %}

{% block page_subtitle %}{% endblock %}

{% block sidebar_menu %}
     <!-- Sidebar Menu -->
    <ul class="sidebar-menu" data-widget="tree">
      <li class="header">MAIN NAVIGATION</li>
      <!-- Optionally, you can add icons to the links -->
      <li class="active"><a href="/book"><i class="fa fa-book"></i> <span>Books</span></a></li>
      <li><a href="/author"><i class="fa fa-user-circle"></i> <span>Authors</span></a></li>
      <li><a href="/member"><i class="fa fa-users"></i> <span>Members</span></a></li>
      <li><a href="/lending"><i class="fa fa-calendar"></i> <span>Lendings</span></a></li>
    </ul>
{% endblock %}

{% block page_content %}

    
    <div class='row'>
        <div class='col-md-9' style="float: none; margin: 0 auto;">

            {% block body %}{% endblock %}

        </div>
    </div>

{% endblock %}