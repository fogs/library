{% extends 'base.html.twig' %}

{% block title %}Book index{% endblock %}

{% block content %}
    <h1>Book index</h1>

    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-body table-responsive no-padding">
                    <table class="table table-hover">
                        <thead>
                            <th>Id</th>
                            <th>Title</th>
                            <th>Author</th>
                            <th>Isbn</th>
                            <th>Number</th>
                            <th>Actions</th>
                        </thead>
                        <tbody>
                        {% for book in books %}
                            <tr>
                                <td>{{ book.id }}</td>
                                <td>{{ book.title }}</td>
                                <td>
                                        {{ book.authors | join }}
                                </td>
                                <td>{{ book.isbn }}</td>
                                <td>{{ book.number }}</td>
                                <td>
                                    <a href="{{ path('book_show', {'id': book.id}) }}"><span
                                                class="label label-primary">show</span></a>
                                    <a href="{{ path('book_edit', {'id': book.id}) }}"><span
                                                class="label label-warning">edit</span></a>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="6">no records found</td>
                            </tr>
                        {% endfor %}
                    </table>
                </div>
            </div>
        </div>
    </div>

    <a href="{{ path('book_new') }}" class="btn btn-success">Create new</a>
{% endblock %}
