{% extends 'base-avanzu.html.twig' %}

{% block title %}Book {% endblock %}
{% block page_subtitle %} {% endblock %}

{% block page_content %}  
 <div class="row">  
<div class="col-md-12">


    <div class="box box-primary">
            <div class="box-header with-border">
              <h3 class="box-title">Books List</h3>
              <a href="{{ path('book_new') }}" class="btn btn-success   pull-right">Create new</a>
            </div>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Author</th>
                <th>Isbn</th>
                <th>Number</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for book in books %}
            <tr>
                <td>{{ book.id }}</td>
                <td>{{ book.title }}</td>
                <td>{{ book.authors | join }}</td>
                <td>{{ book.isbn }}</td>
                <td>{{ book.number }}</td>
                <td>
                    <a href="{{ path('book_show', {'id': book.id}) }}"><i class="fa fa-eye"></i></a>
                    <a href="{{ path('book_edit', {'id': book.id}) }}"><i class="fa fa-edit"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

   
    </div>
    </div>
    </div>
{% endblock %}
