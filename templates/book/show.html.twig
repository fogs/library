{% extends 'base.html.twig' %}

{% block title %}Book{% endblock %}

{% block body %}  


            <h1>Book</h1>

            <table class="table table-striped table-bordered">
                <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ book.id }}</td>
                    </tr>
                    <tr>
                        <th>Title</th>
                        <td>{{ book.title }}</td>
                    </tr>
                    <tr>
                        <th>Isbn</th>
                        <td>{{ book.isbn }}</td>
                    </tr>
                    <tr>
                        <th>Author</th>
                        <td>{{ book.authors | join }}</td>
                    </tr>
                    <tr>
                        <th>Number</th>
                        <td>{{ book.number }}</td>
                    </tr>
                </tbody>
            </table>
            
            <div class="btn-group">

                <a href="{{ path('book_index') }}" class="btn btn-primary button-width-150" role="button">back to list</a>

                <a href="{{ path('book_edit', {'id': book.id}) }}" class="btn btn-primary button-width-150" role="button">edit</a>

                {{ include('book/_delete_form.html.twig') }}

            </div>

{% endblock %}
